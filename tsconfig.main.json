{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "noEmit": false,
    "outDir": "dist/main",
    "jsx": "preserve",
    "allowJs": false,
    "composite": true
  },
  "include": [
    "src/main",
    "src/database",
    "src/services",
    "src/types"
  ],
  "exclude": [
    "src/renderer",
    "node_modules",
    "dist"
  ]
}